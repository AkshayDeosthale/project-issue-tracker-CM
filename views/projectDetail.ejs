<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Project Details</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <style>
      body {
        background-color: #f6f8fa;
        font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Helvetica,
          Arial, sans-serif, Apple Color Emoji, Segoe UI Emoji;
      }
      .gh-card {
        background-color: #ffffff;
        border-radius: 5px;
        border: 1px solid #e1e4e8;
        padding: 20px;
      }
      .gh-btn {
        background-color: #2ea44f;
        color: white;
        border: none;
        border-radius: 4px;
        font-weight: 600;
        padding: 6px 12px;
        text-decoration: none;
        display: inline-block;
        margin-top: 20px;
      }
      .gh-btn:hover {
        background-color: #2a8f47;
      }

      .project-details {
        background-color: #ffffff;
        border: 1px solid #e1e4e8;
        padding: 20px;
        border-radius: 5px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        justify-content: space-between;
      }

      .issue-item {
        background-color: #f6f8fa;
        border: 1px solid #e1e4e8;
        padding: 15px 20px;
        border-radius: 5px;
        margin-bottom: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .issue-item:hover {
        background-color: white;
      }

      .issue-btn {
        background-color: #e1e4e8;
        padding: 5px 10px;
        border-radius: 4px;
        text-decoration: none;
        color: #24292e;

        transition: background-color 0.2s;
      }

      .issue-btn:hover {
        background-color: #d1d5da;
      }

      .delete-issue-btn {
        background-color: #ea4a5a;
        color: #ffffff;
      }

      .delete-issue-btn:hover {
        background-color: #d73a49;
      }
      .completed-issue {
        border: 1px solid #2ea44f;
        box-shadow: 0px 4px 10px rgba(46, 164, 79, 0.3);
      }
      .switch {
        position: relative;
        display: inline-block;
        width: 30px; /* Adjust width */
        height: 38px; /* Adjust height */
        margin-top: 8px;
      }

      .switch input {
        opacity: 1;
        width: 100%;
        height: 100%;
      }
    </style>
  </head>
  <body>
    <div class="container mt-5">
      <div class="project-details">
        <div>
          <h2><%= project.name %></h2>
          <p><%= project.description %></p>
        </div>

        <div style="text-align: right" class="project-meta">
          Created on: <%= new Date(project.createdAt).toLocaleDateString() %> by
          <%= project.author %><br />
          Last Updated: <%= new Date(project.updatedAt).toLocaleDateString() %>
        </div>
      </div>
      <div
        class="search-section p-1 rounded"
        style="background-color: #f4f5f7 !important"
      >
        <h4 class="text-primary mb-3">Search Issues</h4>

        <form action="/issues/all" method="post" class="form-inline">
          <!-- Hidden input for project._id -->
          <input type="hidden" name="project" value="<%= project._id %>" />
          <div class="form-group mb-2 mr-3">
            <label for="authorSearch" class="sr-only">Search by Author</label>
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text bg-primary text-white"
                  ><i class="fas fa-user"></i
                ></span>
              </div>
              <input
                type="text"
                class="form-control"
                id="authorSearch"
                name="author"
                placeholder="Search by Author"
              />
            </div>
          </div>
          <div class="form-group mb-2">
            <label for="titleDescriptionSearch" class="sr-only"
              >Search by Title/Description</label
            >
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text bg-primary text-white"
                  ><i class="fas fa-search"></i
                ></span>
              </div>
              <input
                type="text"
                class="form-control"
                id="titleDescriptionSearch"
                name="titleDescription"
                placeholder="Search by Title/Description"
              />
            </div>
          </div>

          <button type="submit" class="btn btn-primary ml-3">Search</button>
          <span class="ml-2">(Click again to reset.)</span>
        </form>
      </div>
      <div class="mt-5">
        <h4>Issues:</h4>
        <% if (project.issues && project.issues.length === 0) { %>
        <div style="text-align: center; padding: 70px; background-color: white">
          <p>
            <i class="fas fa-folder-open fa-2x" style="color: #a3aab1"></i>
          </p>
          <p style="color: #586069">
            No projects exist. Start by creating a new one!
          </p>
        </div>
        <% } else { %> <% project.issues.forEach(issue => { %>
        <div class="issue-item <%= issue.completed ? 'completed-issue' : '' %>">
          <div>
            <span class="issue-title"><%= issue.title %></span>
            <div class="issue-meta">
              Submitted by: <%= issue.author %> on <%= new
              Date(issue.createdAt).toLocaleDateString() %>
            </div>
            <p class="mt-2">
              <% issue.labels.forEach(label => { %>
              <span class="mr-2 badge badge-secondary"><%= label %></span>
              <% }); %>
            </p>
          </div>
          <div style="display: flex; gap: 15px; align-items: center">
            <label class="switch">
              <input type="checkbox" <%= issue.completed ? 'checked' : '' %>
              onclick="toggleIssueCompletion('<%= issue._id %>', event, '<%=
              project._id %>')">
            </label>
            <a
              href="#"
              class="issue-btn"
              data-toggle="modal"
              data-target="#editIssueModal-<%= issue._id %>"
            >
              <i class="fas fa-edit"></i>
            </a>

            <a
              href="/issues/delete/<%= issue._id %>"
              class="issue-btn delete-issue-btn"
              onclick="return confirm('Are you sure you want to delete this issue?')"
            >
              <i class="fas fa-trash-alt"></i>
            </a>
          </div>
        </div>

        <!-- Edit Issue Modal -->
        <div
          class="modal fade"
          id="editIssueModal-<%= issue._id %>"
          tabindex="-1"
          aria-labelledby="editIssueLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="editIssueLabel">Edit Issue</h5>
                <button
                  type="button"
                  class="close"
                  data-dismiss="modal"
                  aria-label="Close"
                >
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <form action="/issues/<%= issue._id %>" method="post">
                  <div class="form-group">
                    <!-- Hidden input for project._id -->
                    <input
                      type="hidden"
                      name="project"
                      value="<%= project._id %>"
                    />
                    <label for="issueTitle">Title:</label>
                    <input
                      type="text"
                      class="form-control"
                      id="issueTitle"
                      name="title"
                      value="<%= issue.title %>"
                    />
                  </div>
                  <div class="form-group">
                    <label for="issueDescription">Description:</label>
                    <textarea
                      class="form-control"
                      id="issueDescription"
                      name="description"
                    >
<%= issue.description %></textarea
                    >
                  </div>
                  <div class="form-group">
                    <label for="issueLabels">Labels:</label>
                    <input
                      type="text"
                      class="form-control"
                      id="issueLabels"
                      name="labels"
                      value="<%= issue.labels.join(', ') %>"
                    />
                  </div>
                  <div class="form-group">
                    <label for="issueAuthor">Author:</label>
                    <input
                      type="text"
                      class="form-control"
                      id="issueAuthor"
                      name="author"
                      value="<%= issue.author %>"
                    />
                  </div>
                  <button type="submit" class="btn btn-primary">
                    Save Changes
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>

        <% }); %> <% } %>
      </div>
      <a
        data-toggle="modal"
        data-target="#addmodal"
        class="gh-btn mt-4"
        href="/issues/new?project_id=<%= project._id %>"
        >Add New Issue</a
      >
      <!-- Add Issue Modal-->
      <div
        class="modal fade"
        id="addmodal"
        tabindex="-1"
        aria-labelledby="addmodal"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="editIssueLabel">Add Issue</h5>
              <button
                type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close"
              >
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form action="/issues/new" method="post">
                <div class="form-group">
                  <!-- Hidden input for project._id -->
                  <input
                    type="hidden"
                    name="project"
                    value="<%= project._id %>"
                  />
                  <label for="issueTitle">Title:</label>
                  <input
                    type="text"
                    class="form-control"
                    id="issueTitle"
                    name="title"
                  />
                </div>
                <div class="form-group">
                  <label for="issueDescription">Description:</label>
                  <textarea
                    class="form-control"
                    id="issueDescription"
                    name="description"
                  ></textarea>
                </div>
                <div class="form-group">
                  <label for="issueLabels">Labels:</label>
                  <input
                    type="text"
                    class="form-control"
                    id="issueLabels"
                    name="labels"
                  />
                </div>
                <div class="form-group">
                  <label for="issueAuthor">Author:</label>
                  <input
                    type="text"
                    class="form-control"
                    id="issueAuthor"
                    name="author"
                  />
                </div>
                <button type="submit" class="btn btn-primary">
                  Save Changes
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <a href="/" class="d-block mt-3">Back to Projects</a>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
      function toggleIssueCompletion(issueId, event, projectId) {
        // Corrected fetch request
        fetch(`/issues/toggle-completion/${issueId}`, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            completed: event.target.checked,
            project: projectId,
          }),
        }).then((response) => {
          if (response.ok) {
            location.reload(); // Refresh the page after toggling completion status
          } else {
            alert("Failed to update issue status.");
          }
        });
      }
    </script>
  </body>
</html>
